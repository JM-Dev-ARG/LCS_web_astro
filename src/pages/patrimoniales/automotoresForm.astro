    class="relative my-20 z-10 h-auto w-full grid place-items-center mx-auto"
  >
    <section class="flex h-full w-[80%] justify-center items-center">
      <ServicesForm
        client:only="react"
        placeholderMensaje={""}
      >
        <InputForm
          name="Edad"
          placeholder="25 a침os"
          type="text"
          labelText="Edad"
        />

        <InputForm
          name="Codigo Postal"
          placeholder="1424"
          type="text"
          labelText="Codigo Postal"
          client:only="react"
        />
        <InputForm
          name="Marca"
          placeholder="Ford"
          type="text"
          labelText="Marca del automovil"
          client:only="react"
        />
        <InputForm
          name="Modelo"
          placeholder="Focus"
          type="text"
          labelText="Modelo del automovil"
          client:only="react"
        />
        <InputForm
          name="Version"
          placeholder="Titanium (como figura en la cedula verde)"
