---
import FooterServices from "../components/servicePages/FooterServices.astro";
import Hero from "../components/servicePages/hero.astro";
import Presentacion from "../components/servicePages/Presentacion.astro";
import Services from "../components/servicePages/Services.astro";
import LayoutServicios from "../layouts/LayoutServicios.astro";
import data from "../data/bentoPersonas.json";
import BentoPersonas from "../components/servicePages/BentoPersonas.astro";
---

<LayoutServicios title="LCS - Seguros de Personas">
  <main>
    <Hero
      title="Asegurarse es la nueva moda"
      subtitle="Seguros que Protegen tus Sueños"
      image="/img/img-personas.avif"
      className="bg-[top_center]"
    />
    <Services>
      <BentoPersonas
        title1={data.title1}
        title2={data.title2}
        title3={data.title3}
        title4={data.title4}
        title5={data.title5}
        title6={data.title6}
        datacontent1={data.datacontent1}
        datacontent2={data.datacontent2}
        datacontent3={data.datacontent3}
        datacontent4={data.datacontent4}
        datacontent5={data.datacontent5}
        datacontent6={data.datacontent6}
        dataform1={data.dataform1}
        dataform2={data.dataform2}
        dataform3={data.dataform3}
        dataform4={data.dataform4}
        dataform5={data.dataform5}
        dataform6={data.dataform6}
      />
    </Services>

    <Presentacion
      image="/resources/planifica_mejor_logo.svg"
      bgColor="bg-[#cdfacf]"
      border="border-[#4cabad]"
    >
      <p>
        <span class="font-medium text-[#386885]"
          >Especialista en seguros de personas y desarrollo económico
          multinivel.</span
        ><br />
        La meta es lograr que las personas y empresas cumplan sus objetivos financieros
        utilizando planificaciones confiables y transparentes con el respaldo de
        aseguradoras de primera línea. El mejor aliado para lograr tu
        <span class="font-medium text-[#386885]"
          >salud e independencia financiera.</span
        >
      </p>
    </Presentacion>
    <FooterServices />
  </main>
</LayoutServicios>
