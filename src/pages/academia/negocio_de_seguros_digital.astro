---
//data
import dataPreguntas from "@/data/preguntas.json";
import dataOpiniones from "@/data/opiniones.json";
import dataProfesor from "@/data/profesor.json";

//components
import LayoutCursos from "@/layouts/LayoutCursos.astro";
import FooterAcademia from "@/components/academia/secciones/FooterAcademia.astro";
import Opiniones from "@/components/academia/secciones/Opiniones.astro";
import Preguntas from "@/components/academia/secciones/Preguntas.astro";
import Equipo from "@/components/academia/secciones/Equipo.astro";
import PresentacionCurso from "@/components/academia/PresentacionCurso.astro";
import Retos from "@/components/academia/secciones/Retos.astro";

const profesor = "Micaela Tissieres Gelsi";
function getProfesor(data, profesor) {
  const arrayProfesores = [];
  const profesorData = data.find((item) => item.titulo === profesor);
  if (!profesorData) {
    return null;
  }
  arrayProfesores.push(profesorData);
  return arrayProfesores;
}
const profesorData = getProfesor(dataProfesor, profesor);
