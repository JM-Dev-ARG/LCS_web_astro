---
//data
import dataPreguntas from "@/data/preguntas.json";
import dataOpiniones from "@/data/opiniones.json";
import dataSolucion from "@/data/solucion.json";
import dataCursos from "@/data/cursos.json";

//components
import LayoutCursos from "@/layouts/LayoutCursos.astro";
import FooterAcademia from "@/components/academia/secciones/FooterAcademia.astro";
import Opiniones from "@/components/academia/secciones/Opiniones.astro";
import Preguntas from "@/components/academia/secciones/Preguntas.astro";
import PresentacionCurso from "@/components/academia/PresentacionCurso.astro";
import SolucionCursos from "@/components/academia/secciones/SolucionCursos.astro";
import RegalaCurso from "@/components/academia/secciones/RegalaCurso.astro";
---

<LayoutCursos title="LCS - Academia de Seguros - Negocio de Seguros Digital">
  <main>
    <PresentacionCurso
      id="presentacion"
      titulo1="Servicios y Beneficios"
      titulo2="para Empresas"
      descripcion="Lorem, ipsum dolor sit amet consectetur adipisicing elit. Voluptatem veritatis molestiae necessitatibus, nobis esse itaque, nam sunt saepe quae totam numquam, velit praesentium Lorem, ipsum dolor sit amet consectetur adipisicing elit. Voluptatem veritatis molestiae necessitatibus, nobis esse itaque, nam sunt saepe quae totam numquam, velit praesentium Lorem, ipsum dolor sit amet consectetur adipisicing elit. Voluptatem veritatis molestiae necessitatibus, nobis esse itaque, nam sunt saepe quae totam numquam, velit praesentium"
      contenido_before=""
    />

    <RegalaCurso
      data={dataCursos}
      id="regala_curso"
      titulo1="Regalá a tus empleados"
      titulo2="un Curso y Mentoria"
      contenido_before="Capacitá"
      descripcion="Transformá tu forma de comercializar seguros: dominá el mundo digital, conectá con más clientes y multiplicá tus ventas con nuestros cursos,  mentorías y asesorías diseñadas para el nuevo mercado."
    />

    <SolucionCursos
      data={dataSolucion}
      id="solucion"
      titulo1="En este curso"
      titulo2="Vas a aprender"
      contenido_before="Solución"
      descripcion="Transformá tu forma de comercializar seguros: dominá el mundo digital, conectá con más clientes y multiplicá tus ventas con nuestros cursos, mentorías y asesorías diseñadas para el nuevo mercado."
    />

    <Preguntas
      data={dataPreguntas}
      id="preguntas_frecuentes"
      titulo1="¿Tenes preguntas?"
      titulo2="Tenemos las respuestas"
      contenido_before="Preguntas"
    />
    <Opiniones
      data={dataOpiniones}
      id="opiniones"
      titulo1="Algunos de nuestros clientes"
      titulo2="opinan de nosotros"
      contenido_before="Opiniones"
    />
    <FooterAcademia />
  </main>
</LayoutCursos>
