---
import Container from "../reutilizables/Container.astro";

type Props = {
  /*  text: string; */
  image: string;
  className?: string;
};

const { image } = Astro.props;
---

<Container>
  <div
    class="w-full lg:w-[90%] flex justify-center items-center gap-4 md:gap-20"
  >
    <div class="">
      <img
        class="hidden md:block w-[50px] md:w-[70px] lg:w-[100px] rotate-[225deg]"
        src="/resources/flechas-rojas.svg"
        alt=""
      />
    </div>
    <div>
      <div
        class="text-[clamp(25px,3vw,40px)] font-light text-pretty text-center flex flex-col justify-center items-center"
      >
        <p>Te recomendamos a nuestro</p>
        <div class="relative w-fit text-[#518d87]">
          <p>Brokers de seguros</p>
          <div class="sub">
            <img
              src="/resources/surayado.svg"
              alt=""
            />
          </div>
        </div>
        <p>de confianza.</p>
      </div>
    </div>

    <div class="">
      <img
        class="hidden md:block w-[50px] md:w-[70px] lg:w-[100px] rotate-[45deg]"
        src="/resources/flechas-rojas.svg"
        alt=""
      />
    </div>
  </div>

  <div
    class="w-full xl:w-[90%] flex flex-col md:flex-row justify-between items-center md:h-[220px] lg:h-[300px] gap-4 md:mb-0"
  >
    <div class="relative h-[100px] md:h-full w-full md:w-1/3">
      <img
        src="./img/e-presenta.avif"
        alt="emoji la chica del seguro presentando el logo del brokers de seguros"
        class="absolute hidden md:block h-full top-0 left-0"
      />

      <img
        class="absolute w-full md:w-[clamp(180px,20vw,300px)] md:top-[20%] md:-right-24 top-1/2 right-1/2 translate-x-1/2 -translate-y-1/2 md:translate-x-0 md:translate-y-0"
        src={image}
        alt=""
      />
    </div>

    <div
      class="w-full md:w-1/2 border-2 border-[#1a6dc0] rounded-[20px] bg-[#1a6dc0] bg-opacity-10 p-4 mb-7 md:mb-0"
    >
      <p class="text-[clamp(18px,2vw,30px)] font-light text-pretty">
        <slot />
      </p>
    </div>
  </div>
</Container>
