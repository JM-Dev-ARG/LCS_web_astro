---
import { color } from "framer-motion";
import Container from "../reutilizables/Container.astro";

type Props = {
  /*  text: string; */
  image: string;
  className?: string;
  border?: string;
  bgColor?: string;
};

const { image, className, border, bgColor } = Astro.props;

const borderColor = border ? border : "border-[#1a6dc0]";
const backgroundColor = bgColor ? bgColor : "bg-[#1a6dc0]";
---

<Container classname="mt-10 ">
  <div
    class="w-full lg:w-[90%] flex justify-center items-center gap-4 md:gap-20"
  >
    <div class="">
      <img
        loading="lazy"
        class="hidden md:block w-[50px] md:w-[70px] lg:w-[100px] rotate-[225deg]"
        src="/resources/flechas-rojas.svg"
        alt="flechas rojas"
      />
    </div>
    <div>
      <div
        class="text-[clamp(20px,3vw,40px)] text-nowrap font-light md:text-pretty text-center flex flex-col justify-center items-center"
      >
        <p>Te presentamos a nuestro</p>
        <div class="relative w-fit text-[clamp(24px,3vw,44px)] text-[#518d87]">
          <p>Broker de seguros</p>
          <div class="sub">
            <img
              loading="lazy"
              src="/resources/surayado.svg"
              alt="surayado"
            />
          </div>
        </div>
        <p>de confianza.</p>
      </div>
    </div>

    <div class="">
      <img
        loading="lazy"
        class="hidden md:block w-[50px] md:w-[70px] lg:w-[100px] rotate-[45deg]"
        src="/resources/flechas-rojas.svg"
        alt="flechas rojas"
      />
    </div>
  </div>

  <div
    class="w-full xl:w-[90%] flex flex-col md:flex-row justify-between items-center md:h-[220px] lg:h-auto gap-4 py-10"
  >
    <div class="w-full md:w-[30%] grid place-items-center">
      <img
        loading="lazy"
        class="w-[90%] h-full object-contain object-center"
        src={image}
        alt="logo partner"
      />
    </div>

    <div
      class=`w-[90%] md:w-[70%]  border-2  rounded-[20px] ${borderColor} ${backgroundColor}  bg-opacity-10 p-4  `
    >
      <div class="text-[clamp(14px,2vw,20px)] font-light text-pretty">
        <slot />
      </div>
    </div>
  </div>
</Container>

<style>
  .sub__container {
    position: relative;
  }
  .sub {
    position: absolute;
    top: clamp(28px, 3.5vw, 50px);
    bottom: 0;
    right: 0;
    left: 0%;
    width: 100%;
    height: 40px;
  }
</style>
