---
type Props = {
  href?: string;
  title1?: string;
  title2?: string;
};

const { href, title1, title2 } = Astro.props;
---

<a
  href={href}
  class="button px-4"
  target="_blank"
>
  <div class="text-gray-50">
    <p>{title1}</p>
    <p class="font-semibold text-[clamp(18px,3vw,25px)]">{title2}</p>
  </div>
  <div class="flex flex-col items-center">
    <img
      class="h-[40px] w-[40px] rotate-[-45deg]"
      src="/resources/flechas-button.svg"
      alt=""
    />
  </div>
</a>

<style>
  .button {
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-radius: 10px;
    height: clamp(80px, 10vw, 100px);
    width: clamp(300px, 50vw, 500px);
    background-image: linear-gradient(
      135deg,
      #518d87 0%,
      rgba(126, 232, 221, 0.9) 100%
    );
    transition: all 0.2s linear;
    cursor: pointer;
    &:hover {
      transform: scale(1.05);
    }
  }
</style>
