---
const data = [
  {
    id: 1,
    title: "title 1",
    content: "content 1",
  },
  {
    id: 2,
    title: "title 2",
    content: "content 2",
  },
  {
    id: 3,
    title: "title 3",
    content: "content 3",
  },
  {
    id: 4,
    title: "title 4",
    content: "content 4",
  },
];
---

<div class="h-[800px] z-10 place-content-center w-full">
  <div class="bento-container mx-auto">
    <div class="bento-element element1">
      <h3 class="text">{data[0].title}</h3>
      <div class="pop-up">
        <div class="pop-up-content bg-red-500">{data[0].content}</div>
      </div>
    </div>
    <div class="bento-element element2">
      <h3 class="text">{data[1].title}</h3>
      <div class="pop-up">
        <div class="pop-up-content bg-yellow-500">{data[1].content}</div>
      </div>
    </div>
    <div class="bento-element element3">
      <h3 class="text">{data[2].title}</h3>
      <div class="pop-up">
        <div class="pop-up-content bg-blue-500">{data[2].content}</div>
      </div>
    </div>
    <div class="bento-element element4">
      <h3 class="text">{data[3].title}</h3>
      <div class="pop-up">
        <div class="pop-up-content bg-green-500">{data[3].content}</div>
      </div>
    </div>
  </div>
</div>

<style>
  .bento-container {
    position: relative;
    width: 80%;
    height: calc(100% - 100px);
    display: grid;
    grid:
      "element1 element1 element1 element1 element2 element2" 1fr
      "element1 element1 element1 element1 element2 element2" 1fr
      "element1 element1 element1 element1 element4 element4" 1fr
      "element1 element1 element1 element1 element4 element4" 1fr
      "element3 element3 element3 element3 element4 element4" 1fr
      "element3 element3 element3 element3 element4 element4 " 1fr
      / 1fr 1fr 1fr 1fr 1fr 1fr;
    gap: 18px;
  }

  .bento-element {
    width: 100%;
    height: 100%;
    border-radius: 20px;
    padding: 10px;
    transition: all 0.7s linear;

    /*  &:hover {
      filter: grayscale(40%);
      opacity: 80%;
    } */

    &:hover .pop-up {
      scale: 1;
    }
    &:hover .pop-up-content {
      scale: 1;
    }
  }

  .bento-container:has(.bento-element:hover) .bento-element:not(:hover) {
    filter: grayscale(100%);
    opacity: 60%;
  }

  .pop-up {
    scale: 0;
    z-index: 50;
    position: absolute;
    padding: 4%;
    /* margin-inline: auto;
    place-self: center; */
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    /*   width: 90%;
    height: 90%; */
    width: 100%;
    height: 100%;
    border-radius: 20px;
    transition: scale 0.8s linear;

    .pop-up-content {
      scale: 0;
      width: 100%;
      height: 100%;
      border-radius: 20px;
      transition: all 0.8s linear;
    }
  }

  .element1 {
    background-color: #ef4444;
    grid-area: element1;
    &:hover {
      background-color: transparent;
    }

    &:hover .text {
      opacity: 0;
    }
  }
  .element2 {
    background-color: #f59e0b;
    grid-area: element2;
    &:hover {
      background-color: transparent;
    }

    &:hover .text {
      transition: scale 0.8s linear;
      opacity: 0;
    }
  }
  .element4 {
    background-color: #22c55e;
    grid-area: element4;
    &:hover {
      background-color: transparent;
    }

    &:hover .text {
      transition: scale 0.8s linear;
      opacity: 0;
    }
  }
  .element3 {
    background-color: #2563eb;
    grid-area: element3;
    &:hover {
      background-color: transparent;
    }

    &:hover .text {
      transition: scale 0.8s linear;
      opacity: 0;
    }
  }
</style>
