---
type Props = {
  title: string;
  description: string;
  image: string;
  url: string;
};

const { title, description, image, url } = Astro.props;
---

<div class="card__container w-full h-[300px] lg:h-[450px] xl:h-[600px]">
  <div
    class="card"
    style=`background-image: url('${image}');`
  >
    <h2 class="z-[2] font-light text-[clamp(30px,3vw,40px)] pb-2">
      {title}
    </h2>
  </div>
  <div class="card__content">
    <p
      class="text-pretty text-center text-gray-50 text-[clamp(16px,1.5vw,30px)] font-light"
    >
      {description}
    </p>
    <a
      class="text-gray-50 text-[clamp(30px,3vw,50px)] hover:text-lcsPink3 transition-all duration-500 ease-linear"
      href=`${url}`
    >
      Ver MÃ¡s +</a
    >
  </div>
</div>

<style>
  .card__container {
    position: relative;
    overflow: hidden;
    cursor: pointer;

    border-radius: 20px;

    & .card {
      position: relative;
      display: flex;
      justify-content: center;
      align-items: end;
      color: aliceblue;
      width: 100%;
      height: 100%;
      transition: all 0.5s linear;
      background-position: center;
      background-size: cover;

      & h2 {
        transition: all 0.3s linear;
      }

      &::before {
        content: "";
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-image: linear-gradient(transparent 1%, #101616 100%);
        -webkit-mask-image: linear-gradient(transparent 1%, #101616 100%);
      }
    }

    & .card__content {
      position: absolute;
      padding: 30px;
      display: flex;
      flex-direction: column;
      justify-content: space-around;
      align-items: center;
      top: 0;
      right: 100%;
      width: 100%;
      height: 100%;
      background-color: #101616d0;
      opacity: 1;
      transition: all 0.4s linear;
    }

    &:hover .card__content {
      right: 0;
    }

    &:hover .card h2 {
      opacity: 0;
    }
  }
</style>
