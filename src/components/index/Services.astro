---
import BentoServices from "../reutilizables/BentoServices.astro";
import Container from "../reutilizables/Container.astro";
import SliderServices from "../reutilizables/SliderServices.astro";
---

<section
  id="services"
  class="relative overflow-hidden scroll-p-[1000px] bg-[#fff5eb] z-10"
>
  <div class="">
    <img
      class="hidden md:block w-auto h-[calc(100%/3)] absolute top-1/2 -left-[30%] xl:-left-[18%] translate-y-[-50%] opacity-70"
      src="/resources/asterisco-fino.svg"
      alt=""
    />
  </div>

  <Container>
    <div class="relative z-10 mt-20 w-full grid place-items-center mx-auto">
      <h1 class="text-[clamp(40px,6vw,100px)] font-extralight z-10">
        Contrata Seguros
      </h1>
      <p
        class="text-[clamp(100px,20vw,200px)] font-bold absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 -z-10 text-lcsPink3 tracking-[-0.1em] opacity-60"
      >
        B B B
      </p>
    </div>
    <div
      class="w-full lg:w-[70%] xl:w-[60%] flex justify-center items-center gap-4"
    >
      <div class="">
        <img
          class="w-[100px] rotate-[225deg]"
          src="/resources/flechas-rojas.svg"
          alt=""
        />
      </div>
      <div>
        <p
          class="text-[clamp(20px,3vw,40px)] font-light text-pretty text-center"
        >
          Si no tenes un <span class="sub relative text-[#518d87]"
            >Broker de seguros</span
          >, te conectamos con uno de confianza
        </p>
      </div>

      <div class="">
        <img
          class="w-[100px] rotate-[45deg]"
          src="/resources/flechas-rojas.svg"
          alt=""
        />
      </div>
    </div>

    <div
      class="hidden w-full xl:w-[80%] md:grid place-items-center mx-auto mt-10"
    >
      <BentoServices />
    </div>
    <p class="md:hidden text-[20px] font-light text-center text-pretty">
      Selecciona una cobertura y recibi tu cotizaci√≥n
    </p>
    <div class="md:hidden w-full overflow-x-auto ml-3 sliderMobile">
      <SliderServices />
    </div>
  </Container>
</section>

<style>
  .sub::before {
    content: "";
    position: absolute;
    bottom: -50%;
    left: 0%;
    width: 100%;
    height: 40px;
    background-image: url("./resources/surayado.svg");
    background-repeat: no-repeat;
    background-size: contain;
    background-position: center;
  }
  .sliderMobile {
    scrollbar-width: none;
  }
</style>
