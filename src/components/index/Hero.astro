<style>
  .fotoHero {
    opacity: 0;
    transform: translateY(100%);
    animation: aparecerFoto 1.5s ease-in-out 0.6s forwards;
  }

  @keyframes aparecerFoto {
    100% {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .hero::after {
    z-index: -1;
    content: "";
    opacity: 0;
    position: absolute;
    top: -15%;
    left: -50%;
    width: 100%;
    height: 40%;
    background-image: url("./resources/flechas.svg");
    background-repeat: no-repeat;
    background-size: contain;
    background-position: top;
    transform: rotate(-100deg);
    animation: aparecerFlechas 2s ease-in-out 0.8s forwards;
  }

  @keyframes aparecerFlechas {
    100% {
      opacity: 1;
    }
  }

  .hero::before {
    z-index: -1;
    content: "";
    opacity: 0;
    position: absolute;
    top: 0;
    left: 38%;
    width: 100%;
    height: 100%;
    background-image: url("./resources/medio-asterisco-bold.svg");
    background-repeat: no-repeat;
    background-size: contain;
    background-position: bottom;
    transform: rotate(180deg);
    animation: aparecerAsterisco 2s ease-in-out 1.2s forwards;
  }

  @keyframes aparecerAsterisco {
    100% {
      opacity: 40%;
    }
  }
</style>

<script>
  document.addEventListener("astro:page-load", () => {
    window.addEventListener("scroll", () => {
      const hero = document.getElementById("hero");
      const scrollY = window.scrollY;

      if (scrollY > 2000) {
        hero.classList.add("opacity-0");
      } else {
        hero.classList.remove("opacity-0");
      }
    });
  });
</script>
