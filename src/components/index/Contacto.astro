---
import Container from "../reutilizables/Container.astro";
import ContactForm from "../react_components/form/ContactForm";
---

<section
  id="contacto"
  class="relative overflow-hidden bg-[url('/resources/back-contacto.svg')] bg-cover bg-center bg-no-repeat z-10"
>
  <Container>
    <div
      class="grid grid-cols-1 md:grid-cols-2 w-full md:gap-x-4 lg:gap-x-0 gap-y-6"
    >
      <div class="w-full h-full flex items-center">
        <div
          class="w-full h-full flex flex-col items-center justify-start leading-tight"
        >
          <div
            class="h-full w-full lg:w-[80%] xl:w-[70%] flex flex-col items-start justify-between leading-tight text-gray-50 mt-10"
          >
            <h3
              class="font-extralight text-[clamp(50px,9vw,80px)] h-full w-full flex items-center justify-center"
            >
              Contacto
            </h3>

            <div class="hidden md:block">
              <img
                loading="lazy"
                class="w-full h-full"
                src="/img/e-corazon.avif"
                alt="Emoji Corazon de La Chica del Seguro"
                height="auto"
                width="auto"
              />
            </div>
          </div>
        </div>
      </div>
      <div
        class="w-full h-full flex justify-center items-center pb-10 md:py-10"
      >
        <ContactForm client:only="preact" />
      </div>
    </div>
  </Container>
</section>

<style>
  form .campo:focus {
    outline: 2px solid #ed705fa4;
    outline-offset: -4px;
  }
  .background {
    background-image: linear-gradient(
      180deg,
      #557367 0%,
      rgba(236, 133, 119, 0.67) 100%
    );
    box-shadow: 5px 5px 1px 0 #254542;

    background-size: 100% 200%;
    color: #f9fafb;
    transition: all 0.3s linear;

    &:hover {
      box-shadow: 2px 2px 1px 0 #254542;
      transform: translate(4px, 4px);
      background-position: 0 100%;
      color: #1d1e1c;
    }
  }
</style>
