---
import Container from "../reutilizables/Container.astro";
import logoCentro from "@/assets/img_academia/logo_centro.avif";
import logoBorde from "@/assets/img_academia/borde.avif";

interface Props {
  id: string;
  titulo1: string;
  titulo2: string;
  descripcion?: string;
  contenido_before?: string;
}

const { id, titulo1, titulo2, descripcion, contenido_before } = Astro.props;
---

<section
  id={id}
  class="pt-10 w-full relative before:absolute before:top-0 before:right-0 before:w-full before:h-[clamp(150px,20vw,300px)] before:opacity-[0.04] before:z-[-1] before:text-[#190f59] before:text-[clamp(100px,13vw,300px)] before:font-light before:tracking-tighter before:text-right before:flex before:items-center before:justify-end overflow-hidden"
  style={`--contenido-before: \"${contenido_before}\";`}
>
  <Container classname="relative top-0 py-12 lg:py-14 ">
    <div class="w-full h-full flex flex-col justify-start items-center gap-8">
      <div
        class="absolute grid place-items-center mx-auto top-0 left-0 w-full h-full z-[-1] opacity-10"
      >
        <div class="w-1/2 h-full grid place-items-center mx-auto relative">
          <img
            class="absolute flex items-center justify-center w-[50%]"
            src={logoCentro.src}
            alt="Logo Academia de Seguros de La Chica del Seguro"
            height="auto"
            width="auto"
            title="Logo Academia de Seguros de La Chica del Seguro"
          />
          <img
            class="logo__animado w-[50%]"
            src={logoBorde.src}
            alt="Borde del logo de la Academia de Seguros de La Chica del Seguro"
            height="auto"
            width="auto"
            title="Borde del logo de la Academia de Seguros de La Chica del Seguro"
          />
        </div>
      </div>

      <h2
        class=`w-full flex flex-col items-center justify-center leading-tight  text-academia-negro`
      >
        <p
          class="font-extralight text-[clamp(26px,4.2vw,70px)]"
          data-aos="fade-right"
          data-aos-duration="800"
          data-aos-once="true"
        >
          {titulo1}
        </p>
        <p
          class="relative font-bold text-[clamp(26px,4.2vw,70px)] before:absolute before:w-[calc(100%+3%)] before:h-[80%] before:inset-0 before:top-3 before:-left-1 md:before:top-5 md:before:-left-2 lg:before:top-6 lg:before:-left-3 xl:before:top-9 before:bg-[#dcef10ff] before:z-[-1] before:skew-x-[30deg]"
          data-aos="fade-right"
          data-aos-duration="800"
          data-aos-delay="200"
          data-aos-once="true"
        >
          {titulo2}
        </p>
      </h2>

      <div class={`${descripcion ? "grid w-full lg:w-[80%] pt-4 " : "hidden"}`}>
        <span
          class="text-center text-[clamp(1rem,2.2vw,1.3rem)] text-academia-negro text-pretty w-full mt-4"
          data-aos="fade-right"
          data-aos-duration="800"
          data-aos-delay="400"
          data-aos-once="true"
          >{descripcion}
        </span>
      </div>
      <div class="flex justify-center items-center w-full mt-8">
        <a
          href=`/academia`
          class="bg-academia-violeta1 px-8 py-2 text-gray-50 font-normal text-3xl shadow-academia-boton hover:translate-x-[5px] hover:translate-y-[5px] hover:shadow-none transition-all duration-300 ease-in"
          >Â¿Empezamos?</a
        >
      </div>
    </div>
  </Container>
</section>

<style>
  @media (min-width: 768px) {
    section[id]::before {
      content: var(--contenido-before);
    }
  }

  .logo__animado {
    animation: rotar 40s linear infinite;
  }

  @keyframes rotar {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }
</style>
