---
interface Props {
  numero?: number;
  titulo?: string;
  texto?: string;
}

const { numero, titulo, texto } = Astro.props as Props;
---

<div
  class="h-[210px] w-full flex flex-col items-center md:items-start justify-start p-6 gap-2"
>
  <div class="flex items-center justify-center px-6 py-2 shadow-academia">
    {numero}
  </div>
  <h3 class="text-2xl font-title">{titulo}</h3>
  <p
    class="text-pretty text-xl font-medium text-center md:text-left leading-tight"
  >
    {texto}
  </p>
</div>
