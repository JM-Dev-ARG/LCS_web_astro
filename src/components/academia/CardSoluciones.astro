---
interface Props {
  numero?: number;
  titulo?: string;
  texto?: string;
  delay?: string;
}

const { numero, titulo, texto, delay } = Astro.props as Props;
---

<div
  class="w-full flex flex-col items-center md:items-start justify-start p-6 gap-4"
  data-aos="fade-up"
  data-aos-duration="800"
  data-aos-delay={delay}
  data-aos-once="true"
>
  <div
    class="flex items-center justify-center px-6 py-2 shadow-academia-boton border border-academia-violeta2 text-academia-violeta1"
  >
    {numero}
  </div>
  <div class="flex flex-col items-center md:items-start">
    <h3 class="text-2xl text-academia-violeta1">{titulo}</h3>
    <p
      class="text-pretty text-lg font-light text-center md:text-left leading-tight"
    >
      {texto}
    </p>
  </div>
</div>
