---
import SeccionCompleta from "../SeccionCompleta.astro";
import CardRetos from "../CardRetos.astro";

interface Props {
  id?: string;
  titulo1?: string;
  titulo2?: string;
  contenido_before?: string;
  descripcion?: string;
  data?: {
    titulo: string;
    descripcion: string;
  }[];
  img?: string;
}
const { id, titulo1, titulo2, contenido_before, descripcion, data, img } =
  Astro.props;
---

<SeccionCompleta
  id={id}
  titulo1={titulo1}
  titulo2={titulo2}
  contenido_before={contenido_before}
  descripcion={descripcion}
>
  <div
    class="grid grid-cols-1 lg:grid-cols-2 gap-6 place-items-center mt-8 mb-12 w-full xl:w-[80%]"
  >
    <div class="w-full flex flex-col justify-center items-center gap-4">
      {
        data.map((item, index) => (
          <CardRetos
            titulo={item.titulo}
            texto={item.descripcion}
            delay={(index * 200).toString()}
          />
        ))
      }
    </div>
    <div class="w-full h-full hidden lg:grid place-items-center mx-auto">
      <img
        loading="lazy"
        class="size-[80%] object-cover object-center shadow-academia"
        src={img}
        alt="Imagen del curso Negocio de Seguros Digital"
        height="auto"
        width="auto"
        title="Imagen del curso Negocio de Seguros Digital"
      />
    </div>
  </div>
</SeccionCompleta>
