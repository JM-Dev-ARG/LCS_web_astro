<script>
  const cardDisponible = document.querySelectorAll(".card");
  cardDisponible.forEach((card) => {
    const estado = card.getAttribute("state");
    console.log(estado);

    if (estado === "inactive") {
      card.classList.remove("card__disponible");
      card.classList.add("card__no__disponible");
    }
    card.addEventListener("mouseenter", () => {
      card.classList.add("active");
      card.classList.remove("unactive");
    });
    card.addEventListener("mouseleave", () => {
      card.classList.add("unactive");
      card.classList.remove("active");
    });
  });
</script>
