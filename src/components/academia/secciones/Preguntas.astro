---
import SeccionCompleta from "../SeccionCompleta.astro";
import PregFrecuentes from "../PregFrecuentes.astro";
interface Props {
  data?: { pregunta: string; respuesta: string }[]; // Define any props if needed
  id: string;
  titulo1: string;
  titulo2: string;
  contenido_before: string;
  descripcion?: string; // Define any props if needed
}
const { data, id, titulo1, titulo2, contenido_before, descripcion } =
  Astro.props;
---

<SeccionCompleta
  id={id}
  titulo1={titulo1}
  titulo2={titulo2}
  contenido_before={contenido_before}
  descripcion={descripcion}
>
  <div class="grid mt-8 gap-6 mb-12 w-[80%] place-items-center">
    {
      data.map((item, index) => (
        <PregFrecuentes
          pregunta={item.pregunta}
          respuesta={item.respuesta}
          delay={(index * 200).toString()}
        />
      ))
    }
  </div>
</SeccionCompleta>
