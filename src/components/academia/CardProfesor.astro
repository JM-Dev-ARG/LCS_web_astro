---
interface Props {
  titulo: string;
  descripcion: string;
  img: string;
  delay?: string;
}
const { titulo, descripcion, img, delay } = Astro.props;
---

<div
  class="card w-full flex flex-col lg:flex-row justify-between items-center"
  data-aos="fade-right"
  data-aos-duration="800"
  data-aos-delay={delay ? delay : "0"}
  data-aos-once="true"
>
  <div
    class="card_img w-full lg:w-1/3 flex justify-center items-center relative"
  >
    <img
      class="drop-shadow-academia object-cover"
      src={img}
      alt={"Imagen de " + titulo}
    />
    <span
      class="text-[clamp(20px,1.2vw,28px)] grid place-items-center font-bold text-academia-negro bg-academia-amarillo1 skew-x-[30deg] w-[90%] absolute -bottom-4 left-1/2 -translate-x-1/2"
    >
      <p class="-skew-x-[30deg]">{titulo}</p>
    </span>
  </div>
  <div
    class="w-full lg:w-2/3 px-4 flex flex-col justify-center items-start gap-2 bg-black bg-opacity-5 shadow-academia p-8"
  >
    <span
      class="text-[clamp(1rem,1.2vw,1.2rem)] tracking-tight leading-tight mt-2"
    >
      {descripcion}
    </span>
  </div>
</div>
