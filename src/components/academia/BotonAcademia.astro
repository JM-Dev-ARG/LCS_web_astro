---
import flechas from "@/assets/resources/flechas-boton-academia.svg";
export interface Props {
  href?: string;
  title1?: string;
  title2?: string;
  target?: string;
}

const { href, title1, title2, target } = Astro.props;
---

<a
  href={href}
  class="button px-2 md:px-4"
  target={target ? target : "_blank"}
  title={title2}
>
  <div class="text-academia-negro">
    <p>{title1}</p>
    <p class="font-semibold text-[clamp(16px,3vw,25px)]">{title2}</p>
  </div>
  <div class="flex flex-col items-center">
    <img
      class="h-[25px] w-[25px] md:h-[40px] md:w-[40px] rotate-[-45deg]"
      src={flechas.src}
      alt="flechas blancas animadas"
      height="auto"
      width="auto"
      title="flechas blancas animadas"
    />
  </div>
</a>

<style>
  .button {
    display: flex;
    align-items: center;
    justify-content: space-between;

    height: clamp(80px, 10vw, 100px);
    width: clamp(240px, 50vw, 500px);

    transition: all 0.3s linear;
    cursor: pointer;
    position: relative;

    &::before {
      content: "";
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-image: linear-gradient(135deg, #cbb2d7 0%, #dbdf5b 100%);
      transform: skewX(10deg);
      z-index: -1;
    }

    p,
    img {
      transition: all 0.3s linear;
    }

    &:hover {
      width: clamp(80px, 10vw, 100px);
      justify-content: center;
      flex-direction: column;

      &::before {
        animation: transformar 0.3s linear forwards;
      }

      p,
      img {
        width: 100%;
        text-align: center;
        text-wrap: nowrap;
        position: relative;
        transform: scale(1.5);
      }
      img {
        width: 100%;

        margin-top: 6px;
        transform: rotate(-45deg) scale(1.2);
      }
    }
  }

  @keyframes transformar {
    50% {
      transform: skewX(0deg);
    }
    100% {
      border-radius: 50%;
      transform: skewX(0deg);
    }
  }
</style>
