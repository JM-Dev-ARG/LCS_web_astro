---
interface Props {
  titulo: string;
  descripcion: string;
  img_curso: string;
  url_curso: string;
  delay?: string;
}
const { titulo, descripcion, img_curso, url_curso, delay } = Astro.props;
---

<div
  class="card w-full flex flex-col md:flex-row xl:flex-col justify-between items-center shadow-academia xl:max-w-[400px]"
  data-aos="fade-up"
  data-aos-duration="800"
  data-aos-delay={delay ? delay : "0"}
  data-aos-once="true"
>
  <div
    class="card_img w-full h-[400px] bg-center bg-no-repeat bg-cover"
    style=`background-image: url(${img_curso});`
  >
  </div>
  <div
    class="descripcion relative h-[250px] md:h-[400px] xl:h-[250px] w-full px-4 flex flex-col justify-center items-start gap-2 bg-black bg-opacity-5"
  >
    <span
      class="text-[clamp(20px,1.2vw,28px)] grid place-items-center font-bold text-academia-negro bg-academia-amarillo1 skew-x-[30deg] w-[90%] absolute -top-4 md:top-[15%] xl:-top-4 left-1/2 -translate-x-1/2"
    >
      <p class="-skew-x-[30deg]">{titulo}</p>
    </span>
    <span
      class="text-[clamp(1rem,1.2vw,1.2rem)] tracking-tight leading-tight mt-2"
    >
      {descripcion}
    </span>
    <span class="flex justify-end items-center w-full mt-4">
      <a
        href=`${url_curso}`
        class="bg-academia-violeta1 px-8 py-2 text-gray-50 font-normal text-xl shadow-academia-boton hover:translate-x-[5px] hover:translate-y-[5px] hover:shadow-none transition-all duration-300 ease-in"
        >Adquirir</a
      >
    </span>
  </div>
</div>

