---
import Container from "../reutilizables/Container.astro";
import CardRetos from "./CardRetos.astro";
import retos from "@/assets/img_academia/retos_academia.avif";
import data from "../../data/cardRetos.json";
import TituloAcademia from "./TituloAcademia.astro";
---

<section
  id="retos"
  class="pt-10 md:pt-20 w-full relative before:absolute before:top-0 before:right-0 before:w-full before:h-[clamp(150px,20vw,300px)] before:opacity-[0.07] before:z-[-1] before:text-[#190f59] before:text-[clamp(100px,15vw,300px)] before:font-light before:tracking-tighter before:text-right md:before:content-['Retos'] before:flex before:items-center before:justify-end"
>
  <Container>
    <TituloAcademia
      titulo1="¿Queres convertire en un"
      titulo2="Asesor de Seguros"
      titulo3="100% digital?"
    />
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-5 items-center">
      <div class="flex flex-col gap-4 p-4 order-2 xl:order-1">
        <div
          class="text-center md:text-left text-[clamp(1rem,3vw,1.5rem)] grid gap-5 text-gray-800 text-pretty"
        >
          <span
            >Tenés el propósito, las ganas y la energía para realizarlo, pero te
            enfrentas con múltiples inconvenientes a diario que te impiden
            avanzar:
          </span>

          {
            data.map((item) => (
              <CardRetos
                titulo={item.titulo}
                texto={item.texto}
              />
            ))
          }
        </div>
      </div>
      <div
        class="flex justify-center items-center xl:order-2 drop-shadow-2xl iconos my-10"
      >
        <div class="size-[80%] lg:size-[calc(100%-25%)]">
          <img
            src={retos.src}
            alt=""
            class="w-full h-full rounded-tl-[100px] rounded-br-[100px] object-cover object-center"
          />
        </div>
      </div>
    </div>
  </Container>
</section>

<style>
  .iconos {
    position: relative;
  }

  .iconos::before,
  .iconos::after {
    content: "";
    position: absolute;
    z-index: 1;
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    width: 40%;
    height: 40%;
  }

  .iconos::before {
    top: -6%;
    right: -2%;
    background-image: url("../../assets/img_academia/retos_icono_1.avif");
    filter: invert(1);
  }
  .iconos::after {
    bottom: -6%;
    left: -2%;
    background-image: url("../../assets/img_academia/retos_icono_2.avif");
  }
</style>
