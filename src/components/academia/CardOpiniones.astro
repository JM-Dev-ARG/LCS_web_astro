---
interface Props {
  nombre: string;
  opinion: string;
}

const { nombre, opinion } = Astro.props;
---

<div
  class="w-[400px] h-[250px] bg-black bg-opacity-5 flex flex-col justify-center items-center gap-4 shadow-academia p-4"
>
  <span
    class="text-2xl grid place-items-center font-bold text-academia-negro bg-academia-violeta3 skew-x-[30deg] w-[90%]"
  >
    <p class="-skew-x-[30deg]">{nombre}</p>
  </span>
  <p class="text-academia-negro text-lg h-[70%]">
    "{opinion}"
  </p>
</div>
