---
import { ClientRouter } from "astro:transitions";
import Navbar from "../components/react_components/navbar/NavBar";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <title>{title}</title>

    <!-- Schema.org markup for Google -->
