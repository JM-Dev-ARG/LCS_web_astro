---
import { ClientRouter } from "astro:transitions";
import redes from "../data/redes.json";

import NavBarFormularios from "../components/secciones/NavBarFormularios.astro";

interface Props {
  path: string;
  title: string;
  keywords?: string;
  description?: string;
}

const { title, keywords, description, path } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="keywords"
      content={keywords ? `${keywords}` : ""}
    />

    <meta
      name="description"
      content={description ? `${description}` : ""}
    />

    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/resources/ISO-BLANCO.svg"
    />
    <link
      rel="apple-touch-icon"
      href="/resources/ISO-BLANCO.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600;700&family=Poppins:wght@100;200;300;400;500;600;700;800;900&family=Darker+Grotesque:wght@300..900&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>

    <ClientRouter />

    <!-- Meta Pixel Code -->
