---
import { ClientRouter } from "astro:transitions";
import redes from "../data/redes.json";

import NavBarFormularios from "../components/secciones/NavBarFormularios.astro";

interface Props {
  path: string;
  title: string;
  keywords?: string;
  description?: string;
}

const { title, keywords, description, path } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="keywords"
      content={keywords ? `${keywords}` : ""}
    />

    <meta
      name="description"
      content={description ? `${description}` : ""}
    />

    <meta
      name="viewport"
      content="width=device-width"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="/resources/ISO-BLANCO.svg"
    />
    <meta
      name="generator"
      content={Astro.generator}
    />
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      rel="preconnect"
      href="https://fonts.googleapis.com"
    />
    <link
      rel="preconnect"
      href="https://fonts.gstatic.com"
      crossorigin
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@300;400;500;600;700&family=Poppins:wght@100;200;300;400;500;600;700;800;900&family=Darker+Grotesque:wght@300..900&display=swap"
      rel="stylesheet"
    />

    <title>{title}</title>

    <ClientRouter />
  </head>
  <body class="back-forms">
    <div class="absolute w-full h-full opacity-[0.03] z-[1]">
      <img
        class="object-cover w-full h-full"
        src="/resources/amo-asegurar.svg"
        alt=""
      />
    </div>

    <NavBarFormularios path={path} />
    <slot />
    <footer
      id="footerServices"
      class=""
    >
      <div class="absolute w-full h-full"></div>
      <div
        class="w-[70%] h-full flex flex-col md:flex-row justify-center md:justify-between items-center gap-y-5 py-6"
      >
        <a
          class="img__container justify-center md:justify-start"
          href="/"
        >
          <img
            class="w-full md:w-[60%] lg:w-[40%]"
            src="/resources/LOGOTIPO-CREMA.svg"
            alt=""
          />
        </a>
        <div
          class="flex flex-col justify-center items-center md:items-end gap-6 md:gap-0 w-full relative"
        >
          <div class="flex flex-col justify-center items-center gap-[6px]">
            <div class="flex justify-center items-center gap-4">
              {
                redes.map((item) => (
                  <div class="border-2 border-zinc-50 size-[40px] rounded-full flex justify-center items-center hover:scale-[1.1] transition-all duration-200 ease-linear group">
                    <a
                      href={item.href}
                      target={item.target}
                    >
                      <img
                        src={item.img}
                        alt={item.label}
                        class="size-[40px] p-2 group-hover:scale-[1.1] transition-all duration-200 ease-linear"
                        style="filter: invert(100%) "
                      />
                    </a>
                  </div>
                ))
              }
            </div>
            <div class="flex flex-col gap-0 text-xs text-gray-50 text-center">
              <p>Copyright Â© 2024 La Chica del Seguro</p>
              <p>Reservados todos los derechos</p>
            </div>
          </div>
        </div>
      </div>

      <p class="text-center text-xs font-thin text-gray-300">
        Desarrollado por
        <a
          class="cursor-pointer"
          aria-label="Link al Github de JM-Dev"
          href="https://github.com/JM-Dev-ARG"
          target="_blank"
        >
          JM-DEV
        </a>
        / Agencia Panambi
      </p>
    </footer>
  </body>
</html>
<style is:global>
  :root {
    margin: 0;
    padding: 0;
    box-sizing: border-box;

    scrollbar-color: #ed705f96 #90a59c75;

    .darker-grotesque-<uniquifier > {
      font-family: "Darker Grotesque", sans-serif;
      font-optical-sizing: auto;
      font-weight: <weight>;
      font-style: normal;
    }

    .cormorant-garamond-light {
      font-family: "Cormorant Garamond", serif;
      font-weight: 300;
      font-style: normal;
    }

    .cormorant-garamond-regular {
      font-family: "Cormorant Garamond", serif;
      font-weight: 400;
      font-style: normal;
    }

    .cormorant-garamond-medium {
      font-family: "Cormorant Garamond", serif;
      font-weight: 500;
      font-style: normal;
    }

    .cormorant-garamond-semibold {
      font-family: "Cormorant Garamond", serif;
      font-weight: 600;
      font-style: normal;
    }

    .cormorant-garamond-bold {
      font-family: "Cormorant Garamond", serif;
      font-weight: 700;
      font-style: normal;
    }
    .poppins-thin {
      font-family: "Poppins", sans-serif;
      font-weight: 100;
      font-style: normal;
    }

    .poppins-extralight {
      font-family: "Poppins", sans-serif;
      font-weight: 200;
      font-style: normal;
    }

    .poppins-light {
      font-family: "Poppins", sans-serif;
      font-weight: 300;
