    }
  }

  html {
    scroll-behavior: smooth;
    font-family: "Poppins", sans-serif;
    font-weight: 400;
    font-style: normal;
  }
  .back-forms {
    background-color: #202221;
    position: relative;
    min-height: 100vh;
    width: 100%;
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    align-items: center;
    z-index: 1;
  }

  footer {
    position: relative;
    height: max-content;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
  }
  .img__container {
    width: 100%;
    display: flex;

    align-items: center;
    height: 60%;
    z-index: 10;

    & img {
      mask-image: linear-gradient(#202022 60%, transparent 100%);
      -webkit-mask-image: linear-gradient(#222020 60%, transparent 100%);
    }
  }
</style>
