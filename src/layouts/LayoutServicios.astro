---
import { ClientRouter } from "astro:transitions";
import NavBarServicios from "../components/secciones/NavBarServicios.astro";
import FooterServices from "../components/servicePages/FooterServices.astro";

interface Props {
  title: string;
  keywords?: string;
  description?: string;
  url?: string;
}

const { title, keywords, description, url } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="keywords"
      content={keywords ? `${keywords}` : ""}
    />

    <meta
      name="description"
      content={description ? `${description}` : ""}
    />
    <link
      rel="canonical"
      href=`https://lachicadelseguro.com/${url}`
    />
    <meta
      name="robots"
      content="index, follow"
    />

    <meta
      name="viewport"
      content="width=device-width"
    />

    <meta
      name="author"
      content="Ice-Dev para Panambi"
    />

    <link
      rel="icon"
      type="image/svg+xml"
      href="/resources/ISO-BLANCO.svg"
    />
    <link
      rel="apple-touch-icon"
      href="/resources/ISO-BLANCO.svg"
    />

    <meta
      name="generator"
      content={Astro.generator}
    />
    <link
      rel="stylesheet"
      href="/src/fonts.css"
    />

    <title>{title}</title>

    <ClientRouter />

    <!-- Meta Pixel Code -->
    <script>
